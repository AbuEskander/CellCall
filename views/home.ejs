<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="styles/main.css" />
        <title>Register</title>
      </head>
      
<body class="justify-content-center">
    <nav class="navbar mb-5 navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">CellCall</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menu</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="#">Profile</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Friends list</a>
                </li>
                <hr>
                <li class="nav-item">
                    <a class="nav-link" href="#">Settings</a>
                  </li>
              </ul>
              
            </div>
          </div>
        </div>
      </nav>
      <div class="container-sm-5 cont">
        <div class="row">
        <div class="col"></div>
        <div class="col-3 card newPost">
          
          <div class="d-grid gap-5  d-md-flex justify-content-md-end ">
            <h4 class="me-lg-4 ">Share Your life!</h4>
            <a href="/newpost">
            <button class="btn btn-outline-dark me-md-2 " type="button">New Post</button>
          </a>
          </div>
        </div>
        <div class="col"></div>
        </div>
        <div class="row">
          <div class="col"></div>
          <div class="col-3 Blog">
            <% if(locals.posts){posts.forEach(post=> { %>
              <li>
                <h2><%=post.title%></h2>
                <small> <%=post.date %> </small>
                <p><%=post.content%></p>
                <small>By: <%=post.author%> </small>
                <a class="edit" href="/edit/<%= post.id %>">Edit</a>
                <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
              </li>
              <% });}else{ %>
                <h3>Add You First Post!</h3>
                <% } %>
          </div>
          <div class="col"></div>
        </div>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>